<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_CarteraEmisora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="emisor"/>

    <EditText
        android:id="@+id/edit_CarteraReceptora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_CarteraEmisora"
        android:hint="receptor"/>

    <EditText
    android:id="@+id/edit_TituloMovimiento"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/edit_CarteraEmisora"
    android:hint="Titulo"/>

    <EditText
        android:id="@+id/edit_saldoCartera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/saldo_inicial"
        android:layout_below="@+id/edit_TituloMovimiento"
        android:layout_alignParentStart="true"
        android:inputType="number"/>

</RelativeLayout>